{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "cache": false,
      "outputs": ["generated/**"]
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["^db:generate"]
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": ["^db:generate"]
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["^db:generate"]
    },
    "db:studio": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
